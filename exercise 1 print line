#include<iostream>
using namespace std;
int main()
{
	cout << "***************************************************" << endl 
		<< "\t\t\tWelcome!                       " << endl << endl
		<< "Please choose a number from the following options :" << endl << endl
		<< "1.\tPlay the game! " << endl
		<< "2.\tDemo the game!" << endl
		<< "3.\tExit " << endl << endl
		<< " ****************************************************" endl;
	system("pause");
	return 0;
}


/*#include<iostream>  represent the header file
using namespace std is a basic requirement if you want to print something. 
otherwise, you need to code out cout and cin as std:: cout or cin instead.
*/
//output should be following
/*
****************************************************
                        Welcome!

Please choose a number from the following options :

1.      Play the game!
2.      Demo the game!
3.      Exit
*/
